{
    "name": "ivanwhm/uresc-backend",
    "description": "Site da 4ª União Regional Espírita do Estado de Santa Catarina",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wilhelm",
            "email": "ivan.whm@me.com"
        },
        {
            "name": "Daniel Schlindwein",
            "email": "daniel_schlindwein@outlook.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6.0",
        "yiisoft/yii2": "~2.0.10",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "yiisoft/yii2-imagine": "~2.0.0",
        "wadeshuler/yii2-ckeditor-cdn": "~1.0",
        "kartik-v/yii2-datecontrol": "dev-master",
        "kartik-v/yii2-widget-datepicker": "@dev",
        "kartik-v/yii2-widget-timepicker": "@dev",
        "kartik-v/yii2-password": "@dev",
        "kartik-v/yii2-grid": "@dev",
        "kartik-v/yii2-editable": "@dev",
        "kartik-v/yii2-widget-touchspin": "@dev"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1",
        "codeception/specify": "~0.4.3"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
